<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="timerText">
    	<item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">75dp</item>
    </style>
     <style name="eventName">
    	<item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#fbca33</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">35dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLength">16</item>
    </style>
         <style name="date">
    	<item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#fbca33</item>
        <item name="android:gravity">right</item>
         <item name="android:textSize">12dp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="temperature">
    	<item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#fbca33</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">normal</item>
    </style>
     <style name="timerLogHeading">
        <item name="android:textColor">#c4c4c4</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>
        <style name="logText">
    	<item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#b4b4b4</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="buttonText">
    	<item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FEC500</item>
        <item name="colorPrimaryDark">#FCCF29</item>
        <item name="colorAccent">#FEC500</item>
        <item name="android:textColorSecondary">#FEC500</item>

    </style>

</resources>